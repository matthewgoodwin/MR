<div id="sign-in" style='background-image: url("<%= image_path 'bg-landing2.jpg' %>"), linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.2) 30%);'>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-center sign-in-title">
      <%= image_tag 'welcome.png', class: 'welcome-logo' %>
    </div>
  </div>

  <div class="col-xs-12 text-center" style='margin-top: 20px;'>
    <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'btn-fb' %><br />
    <% end -%>
    <% end -%>
  </div>

  <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html=> { class: 'session-form' }) do |f| %>
    <div class="form-inputs">
      <% f.input_field :username, required: false, autofocus: true, label: false, placeholder: "username", class: 'session-input' %>
      <%= f.input_field :email, required: false, autofocus: true, label: false, placeholder: "email", class: 'session-input' %>
      <%= f.input_field :password, required: false, label: false, placeholder: "password", class: 'session-input'%>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions text-center">
      <%= image_submit_tag("logo-white.png", class: 'image-responsive avatar-large sign-in-logo') %>
    </div>
    <% end %>
  </div>
</div>



